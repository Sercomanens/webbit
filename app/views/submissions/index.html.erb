<% content_for :primary_content do %>
  <h1>Submissions</h1>

  <div id="submissions">
    <ul class="divide-y">
      <% @submissions.each do |submission| %>
        <%= render submission %>
      <% end %>
    </ul>
  </div>

<% end %>

<% content_for :secondary_content do %>
  <%= link_to "New submission", new_submission_path %>
<% end %>

<%= render "basic_layout" %>
